@model asyncDrive.Web.Models.LoginDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
            <h3 class="text-center mb-4">Login</h3>

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input 
                        type="text" 
                        id="username" 
                        name="Username"
                           class="form-control" required>
                    <div class="invalid-feedback">
                        @ViewData.ModelState["Username"]?.Errors.FirstOrDefault()?.ErrorMessage
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="Password" 
                        class="form-control" required>
                    <div class="invalid-feedback">
                        @ViewData.ModelState["Password"]?.Errors.FirstOrDefault()?.ErrorMessage
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>

                @if (!string.IsNullOrEmpty(ViewData.ModelState[""]?.Errors.FirstOrDefault()?.ErrorMessage))
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        @ViewData.ModelState[""]?.Errors.FirstOrDefault()?.ErrorMessage
                    </div>
                }
            </form>
        </div>
    </div>
</body>
</html>
